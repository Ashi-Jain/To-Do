<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <h1>TODO App</h1>
    <hr>
    <br>
    <div class="container">
        <form action="/create-todo" method="POST" id="form">
            <div class="row" id="description">
                <span id="span1"> description </span>
                <span id="span2"> Add a task: </span>
                <input type="text" name="description" placeholder=" Enter the task" required id="description"
                    autocomplete="off">
            </div>
            <br>
            <br>
            <br>
            <br>
            <div class="row" id="category">
                <!-- <div class="col" id="category"> -->
                <span id="span1"> category </span>
                <br>
                <span id="span2"> Select a category: </span>
                <select name="category" required>
                    <option value="personal">personal</option>
                    <option value="work">work</option>
                </select>
            </div>
            <br>
            <br>

            <div class="row" id="dueDate">
                <!-- <div class="col" id="dueDate"> -->
                <span id="span3"> due date </span>
                <br>
                <span id="span2"> Fill the due date: </span>
                <input type="date" name="dueDate" placeholder="Enter date " required>

            </div>
            <br>
            <br>
            <button type="submit" id="button"> <i class="fas fa-plus"></i> Add Task</button>
            <br>
            <br>
            <h2>Select on a task that you want to delete!</h2>

        </form>

        <br>

    </div>

    <div class="container" id="display">

        <ul>
            <!-- <hr> -->
            <% for(let i of toDo) { %>
                <li>
                    <div id="contain">
                        <div class="details">
                            <div class="row">
                                <div class="col">
                                    <p id="dp">

                                        <a href="/delete-todo/?id=<%= i._id %>" class="link">
                                            <%= i.description %>
                                        </a>
                                    </p>

                                </div>

                                <div class="col">
                                    <p id="cp">
                                        <br>
                                        <%= i.category %>
                                    </p>
                                </div>
                            </div>
                            <!-- <hr> -->
                            <div class="row">
                                <div class="col">
                                    <p id="datep">
                                        <%= i.dueDate %>
                                    </p>

                                </div>
                                <!-- <hr> -->
                            </div>
                        </div>
                        <!-- <div class="delete-button">
                            <a href="/delete-todo/<%= i.description %>"><i class="fas fa-trash"></i></a>

                        </div> -->
                    </div>


                    <br>
                </li>
                <% } %>
        </ul>
    </div>

    <script src="https://kit.fontawesome.com/026c7a0d49.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
        integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/home.js"></script>

</body>

</html>